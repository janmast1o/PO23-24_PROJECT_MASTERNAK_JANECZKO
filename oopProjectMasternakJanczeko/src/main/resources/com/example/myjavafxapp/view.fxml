<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Spinner?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.myjavafxapp.Controller">
  <padding>
    <Insets bottom="120" left="220" right="220" top="250"/>
  </padding>

  <Label fx:id="number" />

  <Label fx:id="enterText">Enter n using Spinner</Label>
  <Spinner fx:id="numberSpinner" max="20" editable="true" initialValue="2"/>
  <Button fx:id="acceptButton" text="Accept" onAction="#onButtonClick" />
</VBox>